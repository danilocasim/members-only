<% if (locals.posts) { %> <% posts.forEach((post) => { %>
<p><% if (locals.showDetails) { %> <%= post.firstname %></p>
<% } else {%>
<p>Unknown</p>
<% } %>
<p><%= post.title %></p>
<p><%= post.message %></p>
<p><% if (locals.showDetails) { %> <%= post.timestamp %></p>
<% } else {%>
<p>Time is illusion</p>
<% } %> <% if (locals.showDelete) { %>
<form action="/deletePost" method="post">
  <button name="postId" value="<%= post.id %>">Delete</button>
</form>
<% } %> <% }) %> <% } %>
